<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/weathers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"></android.support.v4.view.ViewPager>

    <TextView
            android:id="@+id/checklogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blackalpha"
            android:gravity="end"
            android:paddingStart="0dp"
            android:paddingEnd="2dp"
            android:paddingBottom="1dp"
            android:text="@string/notlogg"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/loginname"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/loginname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blackalpha"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="1dp"
            android:text="@string/regusername"
            android:textColor="@color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/checklogin"
            tools:visibility="gone" />
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:background="@color/blackalpha"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/namerecycler">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>