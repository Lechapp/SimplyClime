<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SettingsActivity">

    <TextView
            android:text="@string/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/settingscity"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp" android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/settingscity"
            android:layout_marginTop="40dp" android:id="@+id/linearLayout3">
        <TextView
                android:text="@string/stationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:id="@+id/sname"/>
        <TextView
                android:text="@string/stationname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/snamee" android:layout_weight="1"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/stationname"
                android:ems="10"
                android:labelFor="@id/sname"
                android:id="@+id/edittextsname" android:layout_weight="1" android:textSize="14sp"
                tools:visibility="gone" android:visibility="gone" android:importantForAutofill="no" tools:targetApi="o"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:contentDescription="@string/edit"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_edit_black_24dp"
                android:id="@+id/editsname" android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:id="@+id/linearLayout4">
        <TextView
                android:text="@string/wunit"
                android:layout_width="103dp"
                android:layout_height="wrap_content" android:id="@+id/textView70" android:layout_weight="0"
                android:textSize="14sp"
        />
        <TextView
                android:text="@string/kmh"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" android:id="@+id/windtextunit" android:layout_weight="1"/>


        <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:checkedButton="@id/skmh"
                android:id="@+id/wtempunit"
                tools:visibility="gone" android:visibility="gone">
            <RadioButton
                    android:text="@string/kmh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/skmh" android:layout_weight="1"
                    android:textSize="12sp"/>
            <RadioButton
                    android:text="@string/ms"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_height="wrap_content" android:id="@+id/sms" android:layout_weight="1"
                    android:textSize="12sp"/>
            <RadioButton
                    android:text="@string/mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/smph" android:layout_weight="1"
                    android:textSize="12sp"/>
        </RadioGroup>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:contentDescription="@string/windunit"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_edit_black_24dp"
                android:id="@+id/editwunit" android:layout_weight="0"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/linearLayout6">
        <TextView
                android:text="@string/tunit"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView80"
                android:textSize="14sp"/>
        <TextView
                android:text="@string/Celsjusz"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" android:id="@+id/temptextunit" android:layout_weight="1"/>
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:checkedButton="@id/C"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp" android:id="@+id/stempunit" android:visibility="gone"
                tools:visibility="gone">
            <RadioButton
                    android:text="@string/Celsjusz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sC" android:layout_weight="1"
                    android:textSize="14sp"/>
            <RadioButton
                    android:text="@string/Fahrenheit"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content" android:id="@+id/sF" android:layout_weight="1"
                    android:textSize="14sp"/>
            <RadioButton
                    android:text="@string/Kelvin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/sK" android:layout_weight="1"/>
        </RadioGroup>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_edit_black_24dp"
                android:id="@+id/edittunit" android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            android:layout_marginTop="25dp" android:id="@+id/allapi" android:visibility="gone">
        <TextView
                android:text="@string/apiKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView17" android:layout_weight="0"/>
        <TextView
                android:text="@string/apiKey"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" android:id="@+id/apiKey" android:layout_weight="1"
                android:textSize="16sp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:contentDescription="@string/textcopied"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_content_copy_black_24dp"
                android:id="@+id/copyapi" android:layout_weight="0"/>
    </LinearLayout>

    <Button
            android:id="@+id/apply"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="0"
            android:text="@string/apply"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintStart_toEndOf="@+id/delete"
            app:layout_constraintTop_toBottomOf="@+id/progressDelete" />

    <ImageView
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/allapi"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:indeterminateOnly="true"
            android:layout_height="wrap_content"
            android:id="@+id/progressDelete"
            android:visibility="gone" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/allapi" android:layout_marginTop="55dp"/>
</android.support.constraint.ConstraintLayout>