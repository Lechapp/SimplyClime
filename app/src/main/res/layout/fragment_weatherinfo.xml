<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/bgweather"
        android:paddingTop="24dp"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.Weatherinfo">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                    android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:gravity="center"
                      android:visibility="gone" android:id="@+id/dayfragment"
                      android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:layout_height="match_parent" android:id="@+id/forecastrecycler"/>
            <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/daybydayrec"/>
            <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:indeterminateOnly="true"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressWeatherDay"
                    android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center" android:id="@+id/allmain">

            <TextView
                    android:text="@string/city"
                    android:textColor="@color/white"
                    android:paddingStart="10dp"
                    android:paddingEnd="0dp"
                    android:paddingTop="4dp"
                    android:background="@color/blackalpha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/citymain" tools:visibility="visible"
                    android:textSize="16sp"/>
            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                <android.support.constraint.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:padding="2dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/circle"
                        android:layout_height="wrap_content" android:id="@+id/allweather"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp">

                    <pl.simplyinc.simplyclime.elements.CircularProgressBar
                            android:id="@+id/night_ProgressBar"
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            app:progress="0"
                            app:progressBarThickness="4dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    />

                    <pl.simplyinc.simplyclime.elements.CircularProgressBar
                            android:id="@+id/day_ProgressBar"
                            android:layout_width="240dp"
                            android:layout_height="240dp"
                            android:layout_margin="10dp"
                            app:progress="0"
                            app:progressBarThickness="4dp"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                            android:src="@drawable/sunrise_w"
                            android:layout_width="35dp"
                            android:contentDescription="@string/sunrise"
                            android:layout_height="35dp" android:id="@+id/imageView2"
                            app:layout_constraintTop_toTopOf="@+id/day_ProgressBar" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/day_ProgressBar"
                            app:layout_constraintEnd_toEndOf="@+id/day_ProgressBar" android:layout_marginEnd="220dp"/>

                    <ImageView
                            android:src="@drawable/sunrise_w"
                            android:layout_width="35dp"
                            android:contentDescription="@string/sunrise"
                            android:layout_height="35dp" android:id="@+id/imageView3"
                            app:layout_constraintTop_toTopOf="@+id/day_ProgressBar" android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/day_ProgressBar"
                            app:layout_constraintStart_toStartOf="@+id/day_ProgressBar"
                            android:layout_marginStart="220dp"/>
                    <TextView
                            android:text="@string/tempout"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" android:id="@+id/tempout"
                            app:layout_constraintTop_toTopOf="@+id/day_ProgressBar"
                            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/day_ProgressBar"
                            app:layout_constraintVertical_bias="0.23000002" android:textSize="28sp"
                            app:layout_constraintHorizontal_bias="0.43"/>
                    <TextView
                            android:text="@string/sunrise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sunrisetime"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="@+id/imageView2"
                            app:layout_constraintEnd_toEndOf="@+id/imageView2" tools:visibility="gone"/>
                    <TextView
                            android:text="@string/sunset"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/sunsettime" app:layout_constraintStart_toStartOf="@+id/imageView3"
                            app:layout_constraintEnd_toEndOf="@+id/imageView3"
                            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:textSize="10sp"
                            tools:visibility="gone"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:background="@drawable/roundcorner"
                            app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="8dp"
                            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/weathericon"
                            android:id="@+id/linearLayout">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_marginStart="2dp"
                                android:layout_gravity="start"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" android:id="@+id/humidityinfo"
                                android:gravity="center">
                            <ImageView
                                    android:src="@drawable/humidity_w"
                                    android:layout_width="15dp"
                                    android:contentDescription="@string/humicon"
                                    android:layout_height="15dp" android:id="@+id/imageView5"/>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="50dp"
                                    android:gravity="center"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="@string/humidityout"
                                        android:layout_marginStart="1dp"
                                        android:textColor="@color/white"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/humiout"
                                        android:textSize="10sp"/>
                                <TextView
                                        android:text="@string/humidityin"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/white"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/humiin"
                                        android:textSize="10sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/allpress">
                                <ImageView
                                        android:src="@drawable/pressure_w"
                                        android:layout_width="15dp"
                                        android:layout_marginBottom="1dp"
                                        android:contentDescription="@string/pressure"
                                        android:layout_height="15dp" android:id="@+id/imageView6"
                                />
                                <TextView
                                        android:text="@string/pressure"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" android:id="@+id/press"
                                        android:layout_weight="0" android:textSize="10sp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/allwind">
                                <ImageView
                                        android:src="@drawable/wind_w"
                                        android:layout_width="15dp"
                                        android:contentDescription="@string/windspeed"
                                        android:layout_height="15dp" android:id="@+id/imageView7"
                                />
                                <TextView
                                        android:text="@string/windspeed"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" android:id="@+id/wind"
                                        android:layout_weight="0" android:textSize="10sp"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_gravity="end"
                                android:layout_marginEnd="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/allins">
                                <ImageView
                                        android:src="@drawable/sun_w"
                                        android:layout_width="16dp"
                                        android:layout_marginBottom="1dp"
                                        android:contentDescription="@string/pressure"
                                        android:layout_height="16dp" android:id="@+id/imageView8"
                                />
                                <TextView
                                        android:text="@string/insolation"
                                        android:layout_marginBottom="2dp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" android:id="@+id/ins"
                                        android:textSize="10sp"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/allrain">
                                <ImageView
                                        android:src="@drawable/umbrella_w"
                                        android:layout_width="15dp"
                                        android:contentDescription="@string/windspeed"
                                        android:layout_height="15dp" android:id="@+id/imageView9"
                                />
                                <TextView
                                        android:text="@string/rainfall"
                                        android:layout_width="wrap_content"
                                        android:layout_marginStart="1dp"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content" android:id="@+id/rain"
                                        android:layout_weight="0" android:textSize="10sp"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                            android:text="@string/tempin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/tempin" android:textSize="12sp"
                            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/tempout"
                            app:layout_constraintStart_toStartOf="@+id/tempout"/>
                    <ImageView
                            android:background="@drawable/cloud_sun_w"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:contentDescription="@string/weathericon"
                            android:id="@+id/weathericon"
                            app:layout_constraintTop_toTopOf="@+id/tempoutunit"
                            app:layout_constraintStart_toEndOf="@+id/tempout" android:layout_marginStart="6dp"
                            android:layout_marginTop="12dp"/>
                    <TextView
                            android:text="@string/airpollution"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:id="@+id/poltxt" android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                            app:layout_constraintStart_toEndOf="@+id/sunrisetime" android:layout_marginStart="20dp"
                            android:textSize="10sp"
                            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/sunsettime"
                            app:layout_constraintHorizontal_bias="0.19"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            app:layout_constraintTop_toBottomOf="@+id/poltxt"
                            app:layout_constraintEnd_toEndOf="@+id/linearLayout" android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/sunrisetime" android:layout_marginStart="8dp">
                        <TextView
                                android:text="@string/airpollution10"
                                android:layout_width="match_parent"
                                android:layout_marginBottom="2dp"
                                android:paddingStart="4dp"
                                android:paddingEnd="4dp"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content" android:id="@+id/pol10" android:layout_weight="1"
                                android:textSize="10sp"/>
                        <TextView
                                android:text="@string/airpollution25"
                                android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:paddingStart="4dp"
                                android:textColor="@color/white"
                                android:paddingEnd="4dp"
                                android:layout_height="wrap_content" android:id="@+id/pol25" android:layout_weight="1"
                                android:textSize="10sp"/>
                    </LinearLayout>
                    <TextView
                            android:text="@string/Celsjusz"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:id="@+id/tempoutunit" app:layout_constraintStart_toEndOf="@+id/tempout"
                            android:layout_marginStart="1dp"
                            app:layout_constraintTop_toTopOf="@+id/tempout"/>
                    <ImageView
                            android:src="@drawable/ic_battery_50_white_24dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:contentDescription="@string/baterry"
                            android:id="@+id/batterystatus"
                            app:layout_constraintStart_toEndOf="@+id/baterrystatustxt" android:layout_marginStart="1dp"
                            app:layout_constraintTop_toTopOf="@+id/baterrystatustxt"
                            app:layout_constraintBottom_toBottomOf="@+id/baterrystatustxt"/>
                    <TextView
                            android:text="@string/baterry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/baterrystatustxt"
                            app:layout_constraintStart_toStartOf="@+id/day_ProgressBar"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="@+id/day_ProgressBar" android:textSize="10sp"
                            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/day_ProgressBar"
                            app:layout_constraintHorizontal_bias="0.46"/>
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                        android:layout_width="250dp"
                        android:background="@drawable/circle"
                        android:layout_height="250dp" android:id="@+id/errorlayout" tools:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                        android:visibility="gone">

                    <TextView
                            android:text="@string/nodata"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" android:id="@+id/textView23"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"/>
                </android.support.constraint.ConstraintLayout>
                <ImageView
                        android:src="@drawable/ic_settings_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="2dp"
                        android:id="@+id/settings"
                        android:layout_marginEnd="10dp"
                        android:background="@color/blackalpha"
                        android:contentDescription="@string/settings"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>
            </android.support.constraint.ConstraintLayout>
            <TextView
                    android:text="@string/lastupdate"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:padding="1dp"
                    android:paddingStart="3dp"
                    android:paddingEnd="3dp"
                    android:textColor="@color/white"
                    android:layout_gravity="start"
                    android:background="@color/blackalpha"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/lastdata" android:textSize="12sp"
                    android:visibility="gone"/>
            <TextView
                    android:text="@string/dayafterday"
                    android:layout_gravity="end"
                    android:background="@color/blackalpha"
                    android:layout_marginTop="-30dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" android:id="@+id/daybyday"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
